<Window x:Class="FilesDialog.OpenFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesDialog"
        mc:Ignorable="d"
        Title="OpenFilesDialog" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="selectpath"
                Width="520"
                Height="60" />
            <Button Click="selectPath" Content="..." />
        </StackPanel>
        <ComboBox x:Name="Filters" SelectedIndex="0" />
        <Button Click="Okbtn" Content="OK" />
    </StackPanel>
</Window>
